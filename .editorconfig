root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python: keep spaces (tabs can break indentation semantics)
[*.py]
indent_style = space
indent_size = 4

# C/C++: tabs
[*.{c,h,cpp,hpp}]
indent_style = tab
tab_width = 4

# Just: keep spaces (recipe lines are already tab-indented)
[justfile]
indent_style = space
indent_size = 4
